<% layout('layouts/boilerplate') -%>
<div class="container">
    <h1 class="mb-3">All CampingGrounds</h1>
<ul>
<% for(let campground of camps){%>
  <div class="card mb-3">
    <div class="row g-0">
      <div class="col-md-4">
        <img src="<%= campground.imageUrl %>" class="img-fluid rounded-start" alt="...">
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title"><%=campground.title%></h5>
          <p class="card-text"><%=campground.description%></p>
          <p class="card-text"><small class="text-muted"><%= campground.location %></small></p>
          <a class="btn btn-primary" href="/campgrounds/<%=campground._id%>" role="button">View <%=campground.title%></a>
        </div>
      </div>
    </div>
  </div>
<%}%>
</ul>
</div>
    